{
  "name": "@sheetbase/addon",
  "version": "3.0.0",
  "description": "Sheetbase add-on for Google Sheets.",
  "author": "Sheetbase",
  "homepage": "https://sheetbase.dev",
  "license": "MIT",
  "main": "src/public-api.js",
  "typings": "src/public-api.d.ts",
  "files": [
    "src",
    "!**/*.ts",
    "**/*.d.ts"
  ],
  "scripts": {
    "compile": "tsc",
    "build": "workspace-addon-scripts build",
    "push": "workspace-addon-scripts push",
    "docs": "ayedocs generate",
    "test": "npm run compile && nyc --cache false mocha test/**/*.js",
    "coverage": "nyc --cache false report --reporter=text-lcov | coveralls",
    "lint": "gts lint",
    "fix": "gts fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sheetbase/addon.git"
  },
  "bugs": {
    "url": "https://github.com/sheetbase/addon/issues"
  },
  "dependencies": {
    "jsoneditor": "^9.1.1",
    "tinymce": "^5.5.1",
    "vue": "^2.6.12"
  },
  "devDependencies": {
    "@lamnhan/workspace-addon-scripts": "^1.0.1",
    "@types/google-apps-script": "^1.0.16",
    "@types/chai": "^4.2.13",
    "@types/jsoneditor": "^8.6.0",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.8",
    "@types/tinymce": "^4.6.0",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "gts": "^3.0.0",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "typescript": "^4.0.3"
  }
}
